<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>
  <meta charset="utf-8" lang="en">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Change Password</title>
  <link rel="shortcut icon" type="image/png" href="/img/fav_notes.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <div id="shine-div">

      <div class="whole-screen">

        <div id="login-box" style="margin-bottom: 50px;">
          <div id="box-1">
            <h5>Change Password</h5>
            <form action="/change_pw" method="post" name="change_pw-form" class="login-form" id="change_pw-form">
              <input type="text" name="username2" id="username2" placeholder="username" autocomplete="off" required>
              <input type="password" name="old_pw" id="old_pw" placeholder="current password" autocomplete="off" required>
              <input type="password" name="new_pw" id="new_pw" placeholder="new password" required> <br>
              <input type="password" name="new_pw_confirm" id="new_pw_confirm" placeholder="new password, again" autocomplete="off" required>
              <div class="row-buttons">
                <button type="button" name="pw_change" id="pw_change">Change it</button>
              </div>              
            </form>
          </div>
        </div>


      </div>

  </div> <!-- id="shine-div" -->

  <div class="auxiliar_note" id="username_required">
    <p>Please enter your username</p>
  </div>
  <div class="auxiliar_note" id="pw_required">
    <p>Please enter your current password</p>
  </div>
  <div class="auxiliar_note" id="username_forbidden">
    <p>Not submitted - username must have at least 3 characters and cannot contain special characters except underline</p>
  </div>
  <div class="auxiliar_note" id="pw_small">
    <p>Passwords must have at least 5 characters and cannot contain parenthesis, brackets, slashes or quotation marks</p>
  </div>
  <div class="auxiliar_note" id="pw_not_match">
    <p>The new passwords do not match</p>
  </div>


  <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
  <script src="/js/scripts_login.js"></script>

</body>

</html>
